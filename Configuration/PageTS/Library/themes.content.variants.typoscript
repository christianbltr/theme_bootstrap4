themes {
	content {
		# Variants for content elements
		variants {
			default {
			}
			# Special variant for Header
			# Used by ctype header
			# Will be merged with default
			header {
				page-header = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.page_header
				alert {
					none =
					success = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_success
					info = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_info
					warning = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_warning
					danger = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_danger
				}
			}
			# ctype: textmedia
			textmedia {
				alert {
					none = Chose alert
					success = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_success
					info = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_info
					warning = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_warning
					danger = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_danger
				}
				image {
					none = Chose image style
					rounded = Image rounded
					rounded-top = Image rounded-top
					rounded-right = Image rounded-right
					rounded-bottom = Image rounded-bottom
					rounded-left = Image rounded-left
					rounded-circle = Image rounded-circle
				}
				wide-screen = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.wide_screen
			}
			# ctype uploads
			uploads {
				uploads-table-header = Table header
				uploads-table-striped = Table striped
				uploads-table-bordered = Table bordered
				uploads-table-inverse = Table inverse
				uploads-table-hover = Table rows hover
				uploads-table-small = Table small
				uploads-table-responsive = Responsive table
			}
			# ctype themes_buttoncontent_pi1
			themes_buttoncontent_pi1 {
				button-color {
					primary = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.buttons.primary
					secondary = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.buttons.secondary
					success = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.buttons.success
					info = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.buttons.info
					warning = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.buttons.warning
					danger = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.buttons.danger
					link = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.buttons.link
				}
				button-outline = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.buttons.outline
				button-size {
					default = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.buttons.default
					large = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.buttons.large
					small = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.buttons.small
				}
				button-block = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.buttons.block
			}
			# ctype: gridelements_pi1
			gridelements_pi1 {
				accordion {

				}
				tabs {
					tabs-in-card = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.tabs_in_card
					tabs-navigation {
						tabs = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.tabs_navigation_tabs
						pills = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.tabs_navigation_pills
					}
				}

				container {
					wide-screen = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.wide_screen
					alert {
						none =
						success = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_success
						info = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_info
						warning = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_warning
						danger = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_danger
					}
				}
				singleColumnHeaderFooter {
					panel-primary = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.panel_primary
					alert {
						none =
						success = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_success
						info = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_info
						warning = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_warning
						danger = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.alert_danger
					}
				}
				2ColumnGrid {
					gutters {
						none = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.gutters_none
						without = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.gutters_without
						sm = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.gutters_sm
						lg = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.gutters_lg
					}
				}
				3ColumnGrid {
					gutters {
						none = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.gutters_none
						without = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.gutters_without
						sm = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.gutters_sm
						lg = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.gutters_lg
					}
				}
				4ColumnGrid {
					gutters {
						none = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.gutters_none
						without = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.gutters_without
						sm = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.gutters_sm
						lg = LLL:EXT:theme_bootstrap4/Resources/Private/Language/locallang_variants.xlf:content.variants.gutters_lg
					}
				}
			}
		}
	}
}
